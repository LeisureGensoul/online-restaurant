.order-bar{
    height: 100rpx;
    display: flex;
    background-color: #ffffff;
}
.order-bar .order-title{
    flex: 1;
}
.order-title .order-title-text{
    margin: 0 auto;
    width: 80%;
    height: 90rpx;
    text-align: center;
    font-size: 35rpx;
    line-height: 100rpx;
    /* border: 1rpx solid black; */
}
.order-title .select-bar{
    width: 50rpx;
    height: 10rpx;
    background-color: var(--themeColor);
    border-radius: 5rpx;
    position: relative;
    top: 0;
    left: 100rpx;
}


  .coupons-container {
    padding: 32rpx;
  }
  .list {
    margin-bottom: 32rpx;
    background: #fff;
    border-radius: 12rpx;
    padding: 32rpx;
    display: flex;
    align-items: center;
    line-height: 48rpx;
  }
  .list .l {
    text-align: center;
    width: 200rpx;
  }
  .list .l .price {
    font-size: 60rpx;
    color:#e64340;
  }
  .list .l .price text {
    font-size: 28rpx;
    margin-right: 8rpx;
  }
  .list .l .hreshold {
    font-size: 26rpx;
    color:#666;
  }
  .list .r {
    margin-left: 32rpx;
  }
  .list .r .name {
    color: #333;
    font-size: 35rpx;
  }
  .list .r .times {
    color: #666;
    font-size: 26rpx;
  }

