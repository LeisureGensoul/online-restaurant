/**app.wxss**/
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

page{
  /* 定义主题颜色 */
  --themeColor:#ffc77e;
  background-color: rgba(243, 243, 243, 0.8);
  font-size: 28rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
image{
  width: 100%;
  height: 100%;
}
.float-left{
  float: left;
}
.float-right{
  float: right;
}
.flex-display{
  display:flex
}